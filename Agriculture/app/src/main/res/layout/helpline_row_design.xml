<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout"
    android:padding="5dp"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:elevation="3dp"
        android:padding="10dp"
        card_view:cardBackgroundColor="#C8F4C3"
        card_view:cardCornerRadius="5dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/hname"
                android:background="?attr/selectableItemBackgroundBorderless"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Name"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:textColor="#057109"
                />
            <TextView
                android:id="@+id/hdesignation"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hname"
                android:layout_alignParentStart="true"
                android:text="Desi"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:textColor="#057109"
                />
            <TextView
                android:id="@+id/hwork"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hdesignation"
                android:layout_alignParentStart="true"
                android:text="Work"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:textColor="#057109"
                />
            <TextView
                android:id="@+id/hphonenumber"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hwork"
                android:layout_alignParentStart="true"
                android:text="Phone"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:textColor="#057109"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>